datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String
  imageUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  tags      String[]
  comments  Comment[]
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  createdAt DateTime   @default(now())
  name      String
  role      Role       @default(USER)
  password  String?
  method    SingUp @default(LOCAL)
  posts     Post[]
  comments  Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
}

enum Role {
  USER
  ADMIN
}

enum SingUp {
  PROVIDER  
  LOCAL
}
